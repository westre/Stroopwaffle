            <Button x:Name="btnTest" Content="TestButton" HorizontalAlignment="Left" Margin="331,36,0,0" VerticalAlignment="Top" Width="75" Click="TestButtonClick"/>
        </Grid>
        <Grid Margin="0,131,0,0">
            <ScrollViewer>
                <StackPanel x:Name="spServerList">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

</Window>
